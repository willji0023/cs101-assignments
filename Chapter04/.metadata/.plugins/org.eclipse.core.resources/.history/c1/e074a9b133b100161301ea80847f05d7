#include<iostream>
#include<cmath>

using namespace std;

int main()
{
	int grains, userGrains, tiles, total;
	cout << "How many grains would you like?\n";
	cin >> userGrains;

	for (int i = 1; userGrains >= total; i++){
		grains = 0.5 * pow(2, i);
		total = total + grains;
		tiles++;
	}
	cout << "You would need at least " << tiles << " tiles.";
}


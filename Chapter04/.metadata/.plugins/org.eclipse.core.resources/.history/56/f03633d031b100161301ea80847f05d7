#include<iostream>
#include<cmath>

using namespace std;

int main()
{
	int grains, userGrains, tiles;
	cout << "How many grains would you like?\n";
	cin >> userGrains;

	for (int i = 0; grains <= userGrains; i++){
		grains = 0.5 * pow(2, tiles);
		tiles = i;
	}
	cout << "You would need at least " << tiles << " tiles.";
}

